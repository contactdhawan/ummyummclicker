    #umyum-btn {
      background: #ff4081;
      color: white;
      font-size: 2em;
      padding: 20px 40px;
      border: none;
      border-radius: 20px;
      cursor: pointer;
      transition: transform 0.1s;
    }

    #umyum-btn:active {
      transform: scale(0.95);
    }

    #score {
      font-size: 2em;
      margin-top: 20px;
    }

